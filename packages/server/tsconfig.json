{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "lib": [
            "ES2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true, // Crucial for client to import types
        "emitDeclarationOnly": true // Only emit types, not JS
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}