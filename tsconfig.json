{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@client/*": [
                "packages/client/src/*"
            ],
            "@server/*": [
                "packages/server/src/*"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "packages/*/src",
        "packages/*/types"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {
            "path": "./packages/client"
        },
        {
            "path": "./packages/server"
        }
    ]
}